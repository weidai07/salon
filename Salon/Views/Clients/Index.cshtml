@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 
<hr>
<ul>
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
}
</ul>
<p>@Html.ActionLink("Add new client", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>